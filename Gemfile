source 'https://rubygems.org'
ruby "2.0.0"

# Using sinatra.
gem 'sinatra'
gem 'sinatra-base'
gem 'sinatra-partial'
gem 'sinatra-static-assets'
gem 'sinatra-session'

gem 'rack-session-file'

# Using PUMA for web server.
gem 'puma'

# Using Redcarpet to render Markdown.
gem 'redcarpet'

# Using haml for templating engine.
gem 'haml'

# Using LESS stylesheet language.
gem 'less'

# Using Nokogiri to parse XML file.
gem 'nokogiri'
gem 'libv8', '~> 3.11.8'
gem 'therubyracer', :require => 'v8'
