!!! 5
%html
	%head
		%title= "Dimidisk"
		= partial "meta/__meta"
	%body
		.menu
			%a.menu{:href=>'/'}
				%h1.logo Dimidisk
			%a.menu{:href=>'/logout'}
				%span.option{:class=>"radius button secondary"} Logout
		.container
			- if @directoryNames.text == ".."
				%h1.center="저런~"
				%span.center="파일 또는 폴더가 없군요!"
			- @directoryNames.each_with_index do |directoryName,i|
				- if i != 0
					- if @directory[i * 3].text == "file"
						%a{:href => "/download/" + @rawParams.split("/")[1].gsub('"]','') + "/" + escape_html(@directoryIds[i].text) + "/" + escape_html(directoryName.text)}
							%p=escape_html(directoryName.text)
					- else
						%a{:href => @userid+"/"+escape_html(@directoryIds[i].text)}
							%p=escape_html(directoryName.text)