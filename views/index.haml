!!! 5
%html
	%head{:"xmlns"=>"http://www.w3.org/1999/xhtml",:"xmlns:og"=>"http://ogp.me/ns#" ,:"xmlns:fb"=>"http://www.facebook.com/2008/fbml"}
		%title= "Dimidisk"
		= partial "meta/_meta"
	%body
		#fb-root
		%script
			(function(d, s, id) {
			var js, fjs = d.getElementsByTagName(s)[0];
			if (d.getElementById(id)) return;
			js = d.createElement(s); js.id = id;
			js.src = "//connect.facebook.net/ko_KR/all.js#xfbml=1&appId=458284034259428";
			fjs.parentNode.insertBefore(js, fjs);
			}(document, 'script', 'facebook-jssdk'));

		.carousel{itemscope:true,itemtype:"http://schema.org/CreativeWork"}
			.menu
				%h1.logo Dimidisk
				- if session["JSESSIONID"] == nil
					%a.menu{:href=>'/login'}
						%span.option{:class=>"radius button secondary"} 로그인
				- else
					%a.menu{:href=>'/logout'}
						%span.option{:class=>"radius button secondary"} 로그아웃
					%a.menu{:href=>'/shared'}
						%span.option{:class=>"radius button secondary"} 디스크
			.message
				%span.quate= "디미디스크."
				%span.quate.second= "디미디스크는 인터넷 익스플로러 이외의 브라우저를 지원하지 않는 디미고 웹하드를 대체하기 위한 프로젝트입니다."
				.message-extra
					%span.option= link_to "깃헙에서 소스코드 보기","https://github.com/sookcha/Dimidisk"
					%span.option= link_to "디미디스크에 의견을 주세요","https://www.surveymonkey.com/s/J5LMQ7H"
				.fb-like{:"data-href"=>"http://dimidisk.herokuapp.com/", :"data-send"=>"true", :"data-layout"=>"button_count", :"data-width"=>"450", :"data-show-faces"=>"true", :"data-font"=>"arial"}
