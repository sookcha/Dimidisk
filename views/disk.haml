		%title= "Dimidisk"
		= partial "meta/_meta"
	%body
		.menu
			%a.menu{:href=>'/'}
				%h1.logo Dimidisk
			%a.menu{:href=>'/logout'}
				%span.option{:class=>"radius button secondary"} Logout

		.container
			%ul
				- @names.each_with_index do |name,i|
